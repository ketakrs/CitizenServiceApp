<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pdbs3.csp8.cspapp.ComplaintDetails">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/input_outline">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView

                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:id="@+id/Single_post_image"

                />
            <View style="@style/Divider"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:textSize="18dp"
                    android:paddingLeft="5dp"
                    android:hint="title goes here"    android:id="@+id/single_post_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Single_post_image"
                    />
                <View style="@style/Divider"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:paddingLeft="5dp"

                        android:hint="description goes here"
                        android:id="@+id/single_post_desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/single_post_title"
                        />
                    <View style="@style/Divider"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <TextView
                            android:paddingLeft="5dp"

                            android:hint="date goes here"
                            android:id="@+id/single_post_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/single_post_title"
                            />
                        <View style="@style/Divider"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">


                            <TextView
                                android:paddingLeft="5dp"

                                android:hint="Latitude goes here "
                                android:id="@+id/single_post_state"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/single_post_title"
                                />


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">


                                <TextView
                                    android:paddingLeft="5dp"

                                    android:hint="Latitude goes here "
                                    android:id="@+id/single_post_state"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/single_post_title"
                                    />


                                <View style="@style/Divider"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">


                                <TextView
                                    android:paddingLeft="5dp"

                                    android:hint="city goes here"
                                    android:id="@+id/single_post_city"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/single_post_title"
                                    />
                                <View style="@style/Divider"/>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">


                                    <TextView
                                        android:paddingLeft="5dp"

                                        android:hint="area goes here"
                                        android:id="@+id/single_post_area"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/single_post_title"
                                        />
                                    <View style="@style/Divider"/>

                                </LinearLayout></LinearLayout></LinearLayout></LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <Button

            android:layout_marginTop="10dp"
            android:id="@+id/single_remove"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/input_outline"
            android:text="Resolve Complaint" />



        <Button
            android:layout_marginTop="10dp"

            android:id="@+id/single_followup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:background="@drawable/input_outline"
            android:text="Followup Complaint" />
    </LinearLayout>

</ScrollView>
